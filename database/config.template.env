# Copy this file to your backend application and update with actual values
# generated by the setup script

# Database Connection Settings
DB_HOST=localhost
DB_PORT=3306
DB_NAME=zbplans
DB_USER=zbplansuser
DB_PASSWORD=ZB3ld3rl@w!

# Connection Pool Settings (adjust based on your needs)
DB_CONNECTION_LIMIT=10
DB_ACQUIRE_TIMEOUT=60000
DB_TIMEOUT=30000

# SSL Settings (recommended for production)
DB_SSL=false
DB_SSL_CA_PATH=
DB_SSL_CERT_PATH=
DB_SSL_KEY_PATH=

# Encryption Settings (for sensitive data)
ENCRYPTION_KEY=your_32_character_encryption_key_here
ENCRYPTION_ALGORITHM=aes-256-gcm

# JWT Settings
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Application Settings
NODE_ENV=development
PORT=3000
CORS_ORIGIN=http://localhost:4200

# Email Settings (for verification and notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_FROM=ZBB Intake <noreply@zbblaw.com>

# File Upload Settings
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png

# Logging Settings
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Settings
SESSION_SECRET=your_session_secret_here
SESSION_TIMEOUT=3600000

